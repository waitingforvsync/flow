\\ Dimensions of the displayed screen (characters, rows)

IF SMALL_SCREEN
	ScreenWidth = 64
	GameHeight = 19
	StatusHeight = 1
	ScreenBaseAddr = &5800
ELSE
	ScreenWidth = 80
	GameHeight = 24
	StatusHeight = 1
	ScreenBaseAddr = &4000
ENDIF

ScreenHeight = GameHeight + StatusHeight
ScreenHSyncPos = 98 - (80 - ScreenWidth) DIV 2
ScreenVSyncPos = 35 - (30 - ScreenHeight) DIV 2
ScreenStatusAddr = ScreenBaseAddr - ScreenWidth * StatusHeight * 8
VSyncPulseWidth = 2

\\ Other tables

IF SMALL_SCREEN
	Base = &5000
ELSE
	Base = &3800
ENDIF

ORG Base
.MaskTab			SKIP 256

MaxSprites = 32
MaxActiveSprites = 32

\\ Per-sprite data
;; New bounds of sprite [X0,X1) [Y0,Y1)
.SpriteNewX0		SKIP MaxSprites
.SpriteNewY0		SKIP MaxSprites
.SpriteNewX1		SKIP MaxSprites
.SpriteNewY1		SKIP MaxSprites
;; Old bounds of sprite [X0,X1) [Y0,Y1)
.SpriteOldX0		SKIP MaxSprites
.SpriteOldY0		SKIP MaxSprites
.SpriteOldX1		SKIP MaxSprites
.SpriteOldY1		SKIP MaxSprites
;; Span of union of new and old bounds in character rows
.SpriteRow0			SKIP MaxSprites
.SpriteRow1			SKIP MaxSprites
;; Sprite data address
.SpriteAddrLo		SKIP MaxSprites
.SpriteAddrHi		SKIP MaxSprites

\\ List of free sprite indices
.SpriteFreeList		SKIP MaxSprites

\\ List of active sprite indices, sorted by dirty y
.SpriteActiveList	SKIP MaxActiveSprites

\\ List of sprite indices to render, sorted by sprite index
.SpriteRenderList	SKIP MaxActiveSprites


IF NOT(SMALL_SCREEN)
.RowTabLo			SKIP 25
.RowTabHi			SKIP 25
ENDIF

